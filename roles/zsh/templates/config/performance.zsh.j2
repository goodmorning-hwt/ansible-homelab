# Performance optimizations for Zsh
# Generated by Ansible

# Disable globbing for certain commands
alias find='noglob find'
alias locate='noglob locate'
alias rake='noglob rake'
alias rsync='noglob rsync'
alias scp='noglob scp'
alias sftp='noglob sftp'

# Zsh options for better performance
setopt NO_BEEP                 # Don't beep on error
setopt NO_FLOW_CONTROL         # Disable flow control (Ctrl+S/Ctrl+Q)
setopt HASH_LIST_ALL           # Hash command path for faster execution
setopt COMPLETE_IN_WORD        # Complete from both ends of a word
setopt ALWAYS_TO_END           # Move cursor to end of word on completion
setopt AUTO_MENU               # Show completion menu on successive tab press
setopt AUTO_LIST               # List choices on ambiguous completion
setopt AUTO_PARAM_SLASH        # Add slash if parameter is directory
setopt EXTENDED_GLOB           # Extended globbing. Allows using regular expressions
setopt GLOB_COMPLETE           # Tab completion for glob patterns
setopt NUMERIC_GLOB_SORT       # Sort filenames numerically when it makes sense
setopt RC_EXPAND_PARAM         # Array expansion with parameters
setopt MARK_DIRS               # Add trailing / to directory names
setopt MULTIOS                 # Multiple redirections
setopt PUSHD_IGNORE_DUPS       # Don't push duplicate directories
setopt PUSHD_MINUS             # Make cd -n equivalent to cd +n
setopt PUSHD_SILENT            # Don't print directory stack after pushd/popd
setopt PUSHD_TO_HOME           # pushd with no args acts like pushd $HOME

# Completion performance optimizations
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ~/.zsh/cache
zstyle ':completion:*' accept-exact '*(N)'
zstyle ':completion:*' squeeze-slashes true

# Reduce delay for key sequences
export KEYTIMEOUT=1

# Disable automatic title setting for performance
DISABLE_AUTO_TITLE=true

# Optimize history loading
setopt INC_APPEND_HISTORY      # Add commands to history immediately
setopt HIST_NO_FUNCTIONS       # Don't store function definitions in history
setopt HIST_REDUCE_BLANKS      # Remove superfluous blanks from history
