# Zsh configuration with antidote
# Generated by Ansible

# Configuration directory
ZSH_CONFIG_DIR="$HOME/.config/zsh"

# Set up antidote
source {{ antidote_install_dir }}/antidote.zsh

# Initialize antidote
antidote load

# Load modular configuration files
source "$ZSH_CONFIG_DIR/performance.zsh"
source "$ZSH_CONFIG_DIR/history.zsh"
source "$ZSH_CONFIG_DIR/completion.zsh"
source "$ZSH_CONFIG_DIR/environment.zsh"
source "$ZSH_CONFIG_DIR/aliases.zsh"
source "$ZSH_CONFIG_DIR/frombashrc.zsh"
source ~/.p10k.zsh
source ~/hwt.zsh

# Source additional configuration files if they exist
for config in ~/.zshrc.local ~/.zshrc.$(hostname); do
    [[ -f "$config" ]] && source "$config"
done
